<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <set>
            <objectAnimator android:duration="@integer/anim_duration_100"
                android:propertyName="translationZ" android:valueTo="@dimen/elevation_none"
                android:valueType="floatType" />

            <objectAnimator android:duration="@integer/anim_duration_75"
                android:propertyName="scaleX" android:valueTo="@dimen/scale_btn_big_diminished"
                android:valueType="floatType" />
            <objectAnimator android:duration="@integer/anim_duration_75"
                android:propertyName="scaleY" android:valueTo="@dimen/scale_btn_big_diminished"
                android:valueType="floatType" />
        </set>
    </item>

    <item android:state_enabled="true" android:state_pressed="false">
        <set>
            <objectAnimator android:duration="@integer/anim_duration_100"
                android:propertyName="translationZ" android:valueTo="@dimen/elevation_big"
                android:valueType="floatType" />

            <objectAnimator android:duration="@integer/anim_duration_75"
                android:propertyName="scaleX" android:valueTo="@dimen/scale_btn_big_normal"
                android:valueType="floatType" />
            <objectAnimator android:duration="@integer/anim_duration_75"
                android:propertyName="scaleY" android:valueTo="@dimen/scale_btn_big_normal"
                android:valueType="floatType" />
        </set>
    </item>

</selector>