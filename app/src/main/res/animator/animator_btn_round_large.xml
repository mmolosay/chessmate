<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <set android:interpolator="@android:interpolator/fast_out_slow_in">
            <objectAnimator
                android:duration="@integer/anim_duration_200"
                android:propertyName="translationZ"
                android:valueTo="@dimen/elevation_none"
                android:valueType="floatType" />
        </set>
    </item>

    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <set android:interpolator="@android:interpolator/fast_out_slow_in">
            <objectAnimator
                android:duration="@integer/anim_duration_100"
                android:propertyName="translationZ"
                android:valueTo="@dimen/elevation_normal"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="@integer/anim_duration_75"
                android:propertyName="scaleX"
                android:valueTo="@dimen/scale_btn_large_diminished"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="@integer/anim_duration_75"
                android:propertyName="scaleY"
                android:valueTo="@dimen/scale_btn_large_diminished"
                android:valueType="floatType" />
        </set>
    </item>

    <item
        android:state_enabled="true"
        android:state_pressed="false">
        <set android:interpolator="@android:interpolator/fast_out_slow_in">
            <objectAnimator
                android:duration="@integer/anim_duration_200"
                android:propertyName="translationZ"
                android:valueTo="@dimen/elevation_big"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="@integer/anim_duration_75"
                android:propertyName="scaleX"
                android:valueTo="@dimen/scale_btn_large_normal"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="@integer/anim_duration_75"
                android:propertyName="scaleY"
                android:valueTo="@dimen/scale_btn_large_normal"
                android:valueType="floatType" />
        </set>
    </item>

</selector>