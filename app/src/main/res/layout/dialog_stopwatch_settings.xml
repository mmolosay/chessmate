<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:padding="@dimen/size_16">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/d_stopwatch_settings_limit_label"
        style="@style/TextBody.Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/size_16"
        android:text="@string/d_stopwatch_settings_time_limit"

        app:layout_constraintBottom_toBottomOf="@+id/d_stopwatch_settings_edit_limit_minutes"
        app:layout_constraintEnd_toStartOf="@+id/d_stopwatch_settings_edit_limit_minutes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/d_stopwatch_settings_edit_limit_minutes" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/d_stopwatch_settings_edit_limit_minutes"
        style="@style/EditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"

        android:hint="@string/d_stopwatch_setting_time_limit_m_hint"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:maxLength="2"
        android:selectAllOnFocus="true"

        app:layout_constraintEnd_toStartOf="@+id/d_stopwatch_settings_limit_separator"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/d_stopwatch_settings_limit_label"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/d_stopwatch_settings_limit_separator"
        style="@style/TextBody.Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/size_4"
        android:text="@string/d_stopwatch_setting_time_limit_separator"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/d_stopwatch_settings_edit_limit_minutes"
        app:layout_constraintEnd_toStartOf="@+id/d_stopwatch_settings_edit_limit_seconds"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/d_stopwatch_settings_edit_limit_minutes"
        app:layout_constraintTop_toTopOf="@+id/d_stopwatch_settings_edit_limit_minutes" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/d_stopwatch_settings_edit_limit_seconds"
        style="@style/EditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"

        android:hint="@string/d_stopwatch_setting_time_limit_s_hint"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLength="2"
        android:selectAllOnFocus="true"

        app:layout_constraintBottom_toBottomOf="@+id/d_stopwatch_settings_edit_limit_minutes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/d_stopwatch_settings_limit_separator"
        app:layout_constraintTop_toTopOf="@+id/d_stopwatch_settings_edit_limit_minutes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/d_stopwatch_settings_btn_ok"
        style="@style/Button.Small.RoundedSky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_8"
        android:background="@drawable/btn_rounded_sky_normal"
        android:text="@android:string/ok"
        android:textColor="@android:color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_stopwatch_settings_edit_limit_minutes" />

</androidx.constraintlayout.widget.ConstraintLayout>