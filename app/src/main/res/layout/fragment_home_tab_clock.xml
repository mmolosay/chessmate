<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tab_clock_timer"
        style="@style/TextTitle.Light"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/tab_clock_timer_init"
        android:textColor="@android:color/black"

        android:textSize="@dimen/text_size_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/tab_clock_btn_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_round_normal"
        android:padding="@dimen/size_24"
        android:src="@drawable/ic_change_turn_big_normal"
        android:elevation="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tab_clock_timer"
        app:layout_constraintStart_toStartOf="@+id/tab_clock_timer"
        app:layout_constraintTop_toBottomOf="@+id/tab_clock_timer"
        app:layout_constraintVertical_bias="0.30" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/tab_clock_btn_startstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_round_normal"
        android:padding="@dimen/size_12"
        android:src="@drawable/ic_start_normal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tab_clock_timer"
        app:layout_constraintStart_toStartOf="@+id/tab_clock_timer"
        app:layout_constraintTop_toBottomOf="@+id/tab_clock_btn_turn"
        app:layout_constraintVertical_bias="0.10" />

</androidx.constraintlayout.widget.ConstraintLayout>